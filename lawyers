<!DOCTYPE html> <html lang="pt-BR"> <head>     <meta charset="UTF-8">     <meta name="viewport" content="width=device-width, initial-scale=1.0">     <title>Gerador de Documentos para Advogados</title>     <style>         body {             font-family: Arial, sans-serif;             line-height: 1.6;             margin: 0;             padding: 20px;             background-color: #f5f5f5;         }         .container {             max-width: 800px;             margin: 0 auto;             background-color: white;             padding: 20px;             border-radius: 8px;             box-shadow: 0 0 10px rgba(0, 0, 0, 0.1);         }         h1 {             text-align: center;             color: #2c3e50;         }         .form-group {             margin-bottom: 15px;         }         label {             display: block;             margin-bottom: 5px;             font-weight: bold;         }         input, select, textarea {             width: 100%;             padding: 8px;             border: 1px solid #ddd;             border-radius: 4px;             box-sizing: border-box;         }         textarea {             height: 100px;         }         button {             background-color: #2c3e50;             color: white;             border: none;             padding: 10px 15px;             border-radius: 4px;             cursor: pointer;             font-size: 16px;         }         button:hover {             background-color: #1a252f;         }         .tabs {             display: flex;             margin-bottom: 20px;         }         .tab {             padding: 10px 20px;             background-color: #eee;             cursor: pointer;             border-radius: 4px 4px 0 0;             margin-right: 5px;         }         .tab.active {             background-color: #2c3e50;             color: white;         }         .tab-content {             display: none;         }         .tab-content.active {             display: block;         }         .document-preview {             margin-top: 20px;             padding: 20px;             border: 1px solid #ddd;             border-radius: 4px;             background-color: white;         }         .actions {             display: flex;             justify-content: space-between;             margin-top: 20px;         }         @media print {             .no-print {                 display: none;             }             body, .container {                 margin: 0;                 padding: 0;                 background-color: white;                 box-shadow: none;             }             .document-preview {                 border: none;                 padding: 0;             }         }     </style> </head> <body>     <div class="container">         <h1>Gerador de Documentos para Advogados</h1>                 <div class="tabs no-print">             <div class="tab active" data-tab="form">Formulário</div>             <div class="tab" data-tab="preview">Visualizar Documento</div>         </div>                 <div class="tab-content active" id="form">             <form id="clientForm">                 <h2>Informações do Cliente</h2>                                 <div class="form-group">                     <label for="docType">Tipo de Documento:</label>                     <select id="docType" required>                         <option value="">Selecione um documento</option>                         <option value="procuracao">Procuração</option>                         <option value="contrato">Contrato de Honorários</option>                         <option value="declaracao">Declaração</option>                     </select>                 </div>                                 <div class="form-group">                     <label for="clientName">Nome Completo do Cliente:</label>                     <input type="text" id="clientName" required>                 </div>                                 <div class="form-group">                     <label for="clientNationality">Nacionalidade:</label>                     <input type="text" id="clientNationality" required>                 </div>                                 <div class="form-group">                     <label for="clientMaritalStatus">Estado Civil:</label>                     <select id="clientMaritalStatus" required>                         <option value="">Selecione</option>                         <option value="Solteiro(a)">Solteiro(a)</option>                         <option value="Casado(a)">Casado(a)</option>                         <option value="Divorciado(a)">Divorciado(a)</option>                         <option value="Viúvo(a)">Viúvo(a)</option>                         <option value="União Estável">União Estável</option>                     </select>                 </div>                                 <div class="form-group">                     <label for="clientProfession">Profissão:</label>                     <input type="text" id="clientProfession" required>                 </div>                                 <div class="form-group">                     <label for="clientRG">RG:</label>                     <input type="text" id="clientRG" required>                 </div>                                 <div class="form-group">                     <label for="clientCPF">CPF:</label>                     <input type="text" id="clientCPF" required>                 </div>                                 <div class="form-group">                     <label for="clientAddress">Endereço Completo:</label>                     <input type="text" id="clientAddress" required>                 </div>                                 <h2>Informações do Advogado</h2>                                 <div class="form-group">                     <label for="lawyerName">Nome do Advogado:</label>                     <input type="text" id="lawyerName" required>                 </div>                                 <div class="form-group">                     <label for="lawyerOAB">Número da OAB:</label>                     <input type="text" id="lawyerOAB" required>                 </div>                                 <div id="additionalFields">                     <!-- Campos adicionais serão adicionados aqui dependendo do tipo de documento -->                 </div>                                 <button type="button" onclick="generateDocument()">Gerar Documento</button>             </form>         </div>                 <div class="tab-content" id="preview">             <div class="document-preview">                 <div id="documentContent"></div>             </div>                         <div class="actions no-print">                 <button onclick="switchTab('form')">Voltar ao Formulário</button>                 <button onclick="printDocument()">Imprimir Documento</button>             </div>         </div>     </div>         <script>         // Alternar entre abas         document.addEventListener('DOMContentLoaded', function() {             const tabs = document.querySelectorAll('.tab');             tabs.forEach(tab => {                 tab.addEventListener('click', function() {                     const tabId = this.getAttribute('data-tab');                     switchTab(tabId);                 });             });                         // Adicionar campos específicos para cada tipo de documento             document.getElementById('docType').addEventListener('change', updateAdditionalFields);         });                 function switchTab(tabId) {             // Atualizar abas ativas             document.querySelectorAll('.tab').forEach(tab => {                 tab.classList.remove('active');                 if (tab.getAttribute('data-tab') === tabId) {                     tab.classList.add('active');                 }             });                         // Atualizar conteúdo de abas ativo             document.querySelectorAll('.tab-content').forEach(content => {                 content.classList.remove('active');                 if (content.id === tabId) {                     content.classList.add('active');                 }             });         }                 function updateAdditionalFields() {             const docType = document.getElementById('docType').value;             const container = document.getElementById('additionalFields');             container.innerHTML = '';                         if (docType === 'procuracao') {                 container.innerHTML = `                     <h2>Dados da Procuração</h2>                     <div class="form-group">                         <label for="processNumber">Número do Processo (se houver):</label>                         <input type="text" id="processNumber">                     </div>                     <div class="form-group">                         <label for="powers">Poderes Concedidos:</label>                         <textarea id="powers">Poderes da cláusula "ad judicia" para representar o(a) outorgante em qualquer instância, juízo, tribunal ou repartição pública.</textarea>                     </div>                 `;             } else if (docType === 'contrato') {                 container.innerHTML = `                     <h2>Dados do Contrato</h2>                     <div class="form-group">                         <label for="serviceDescript">Descrição dos Serviços:</label>                         <textarea id="serviceDescript" required></textarea>                     </div>                     <div class="form-group">                         <label for="honoraryValue">Valor dos Honorários (R$):</label>                         <input type="number" id="honoraryValue" required>                     </div>                     <div class="form-group">                         <label for="paymentMethod">Forma de Pagamento:</label>                         <input type="text" id="paymentMethod" required>                     </div>                 `;             } else if (docType === 'declaracao') {                 container.innerHTML = `                     <h2>Dados da Declaração</h2>                     <div class="form-group">                         <label for="declarationContent">Conteúdo da Declaração:</label>                         <textarea id="declarationContent" required></textarea>                     </div>                 `;             }         }                 function generateDocument() {             // Verificar se todos os campos obrigatórios foram preenchidos             const form = document.getElementById('clientForm');             const requiredFields = form.querySelectorAll('[required]');             let allFieldsFilled = true;                         requiredFields.forEach(field => {                 if (!field.value) {                     allFieldsFilled = false;                     field.style.borderColor = 'red';                 } else {                     field.style.borderColor = '#ddd';                 }             });                         if (!allFieldsFilled) {                 alert('Por favor, preencha todos os campos obrigatórios.');                 return;             }                         // Obter valores dos campos             const docType = document.getElementById('docType').value;             const clientName = document.getElementById('clientName').value;             const clientNationality = document.getElementById('clientNationality').value;             const clientMaritalStatus = document.getElementById('clientMaritalStatus').value;             const clientProfession = document.getElementById('clientProfession').value;             const clientRG = document.getElementById('clientRG').value;             const clientCPF = document.getElementById('clientCPF').value;             const clientAddress = document.getElementById('clientAddress').value;             const lawyerName = document.getElementById('lawyerName').value;             const lawyerOAB = document.getElementById('lawyerOAB').value;                         // Obter data atual formatada             const today = new Date();             const day = today.getDate();             const month = today.getMonth() + 1;             const year = today.getFullYear();             const formattedDate = `${day} de ${getMonthName(month)} de ${year}`;                         let documentContent = '';                         if (docType === 'procuracao') {                 const processNumber = document.getElementById('processNumber').value;                 const powers = document.getElementById('powers').value;                                 documentContent = `                     <h2 style="text-align: center;">PROCURAÇÃO</h2>                                         <p><strong>OUTORGANTE:</strong> ${clientName}, ${clientNationality}, ${clientMaritalStatus}, ${clientProfession}, portador(a) do RG nº ${clientRG}, inscrito(a) no CPF sob o nº ${clientCPF}, residente e domiciliado(a) à ${clientAddress}.</p>                                         <p><strong>OUTORGADO:</strong> ${lawyerName}, advogado(a) inscrito(a) na OAB sob o nº ${lawyerOAB}.</p>                                         <p>Por este instrumento particular de procuração, o(a) outorgante nomeia e constitui como seu bastante procurador o(a) outorgado(a) acima qualificado(a), a quem confere amplos ${powers}</p>                                         ${processNumber ? `<p>Especialmente para atuar no processo nº ${processNumber}.</p>` : ''}                                         <p>Por ser verdade, firma o presente instrumento.</p>                                         <p style="text-align: right;">${formattedDate}</p>                                         <p style="margin-top: 60px; text-align: center;">____________________________________________________<br>                     ${clientName}<br>                     CPF: ${clientCPF}</p>                 `;             } else if (docType === 'contrato') {                 const serviceDescript = document.getElementById('serviceDescript').value;                 const honoraryValue = document.getElementById('honoraryValue').value;                 const paymentMethod = document.getElementById('paymentMethod').value;                                 documentContent = `                     <h2 style="text-align: center;">CONTRATO DE HONORÁRIOS ADVOCATÍCIOS</h2>                                         <p>Por este instrumento particular, de um lado <strong>${clientName}</strong>, ${clientNationality}, ${clientMaritalStatus}, ${clientProfession}, portador(a) do RG nº ${clientRG}, inscrito(a) no CPF sob o nº ${clientCPF}, residente e domiciliado(a) à ${clientAddress}, doravante denominado(a) <strong>CONTRATANTE</strong>, e de outro lado <strong>${lawyerName}</strong>, advogado(a) inscrito(a) na OAB sob o nº ${lawyerOAB}, doravante denominado(a) <strong>CONTRATADO(A)</strong>, têm entre si justo e contratado o seguinte:</p>                                         <p><strong>CLÁUSULA 1ª:</strong> O(A) CONTRATADO(A) prestará ao(à) CONTRATANTE os seguintes serviços profissionais na área jurídica:</p>                                         <p>${serviceDescript}</p>                                         <p><strong>CLÁUSULA 2ª:</strong> Em remuneração pelos serviços prestados, o(a) CONTRATANTE pagará ao(à) CONTRATADO(A) o valor de R$ ${parseFloat(honoraryValue).toFixed(2)} (${numberToWords(honoraryValue)} reais), a ser pago da seguinte forma:</p>                                         <p>${paymentMethod}</p>                                         <p><strong>CLÁUSULA 3ª:</strong> O presente contrato tem validade a partir da data de sua assinatura até o término do processo ou serviço contratado.</p>                                         <p><strong>CLÁUSULA 4ª:</strong> As partes elegem o foro da comarca de ________________ para dirimir quaisquer dúvidas decorrentes deste contrato, renunciando a qualquer outro, por mais privilegiado que seja.</p>                                         <p>E por estarem justos e contratados, firmam o presente instrumento em duas vias de igual teor e forma.</p>                                         <p style="text-align: right;">${formattedDate}</p>                                         <div style="margin-top: 60px; display: flex; justify-content: space-between;">                         <div style="width: 45%; text-align: center;">                             ____________________________________________________<br>                             ${clientName}<br>                             CONTRATANTE                         </div>                         <div style="width: 45%; text-align: center;">                             ____________________________________________________<br>                             ${lawyerName}<br>                             CONTRATADO(A)                         </div>                     </div>                 `;             } else if (docType === 'declaracao') {                 const declarationContent = document.getElementById('declarationContent').value;                                 documentContent = `                     <h2 style="text-align: center;">DECLARAÇÃO</h2>                                         <p>Eu, <strong>${clientName}</strong>, ${clientNationality}, ${clientMaritalStatus}, ${clientProfession}, portador(a) do RG nº ${clientRG}, inscrito(a) no CPF sob o nº ${clientCPF}, residente e domiciliado(a) à ${clientAddress}, declaro para os devidos fins que:</p>                                         <p>${declarationContent}</p>                                         <p>Por ser expressão da verdade, firmo a presente declaração.</p>                                         <p style="text-align: right;">${formattedDate}</p>                                         <p style="margin-top: 60px; text-align: center;">____________________________________________________<br>                     ${clientName}<br>                     CPF: ${clientCPF}</p>                 `;             }                         // Exibir o documento gerado             document.getElementById('documentContent').innerHTML = documentContent;             switchTab('preview');         }                 function printDocument() {             window.print();         }                 function getMonthName(month) {             const months = [                 'janeiro', 'fevereiro', 'março', 'abril',                 'maio', 'junho', 'julho', 'agosto',                 'setembro', 'outubro', 'novembro', 'dezembro'             ];             return months[month - 1];         }                 function numberToWords(number) {             // Função simples para converter números em palavras (para valores de honorários)             // Esta é uma versão simplificada. Para valores mais complexos, seria necessário um algoritmo mais robusto             const units = ['', 'um', 'dois', 'três', 'quatro', 'cinco', 'seis', 'sete', 'oito', 'nove'];             const teens = ['dez', 'onze', 'doze', 'treze', 'quatorze', 'quinze', 'dezesseis', 'dezessete', 'dezoito', 'dezenove'];             const tens = ['', '', 'vinte', 'trinta', 'quarenta', 'cinquenta', 'sessenta', 'setenta', 'oitenta', 'noventa'];             const hundreds = ['', 'cento', 'duzentos', 'trezentos', 'quatrocentos', 'quinhentos', 'seiscentos', 'setecentos', 'oitocentos', 'novecentos'];                         // Arredonda para o inteiro mais próximo             number = Math.round(parseFloat(number));                         if (number === 0) return 'zero';             if (number === 1000) return 'mil';                         let result = '';                         // Milhares             if (number >= 1000) {                 result += (Math.floor(number / 1000) === 1) ? 'mil ' : units[Math.floor(number / 1000)] + ' mil ';                 number %= 1000;                 if (number > 0) result += 'e ';             }                         // Centenas             if (number >= 100) {                 result += hundreds[Math.floor(number / 100)] + ' ';                 number %= 100;                 if (number > 0) result += 'e ';             }                         // Dezenas e unidades             if (number >= 10 && number < 20) {                 result += teens[number - 10];             } else if (number >= 20) {                 result += tens[Math.floor(number / 10)];                 if (number % 10 > 0) result += ' e ' + units[number % 10];             } else if (number > 0) {                 result += units[number];             }                         return result.trim();         }     </script> </body> </html>
